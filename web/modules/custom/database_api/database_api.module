<?php

/**
 * Implements hook_theme().
 */
function database_api_theme($existing, $type, $theme, $path) {
  return [
    'database_api' => [
      'variables' => [
        'content' => '',  
      ]
    ]
  ];
}

/**
 * Implements hook_preprocess_page().
 */
function database_api_preprocess_page(&$variables) {
  $variables['#attached']['library'][] = 'database_api/global-styling';
}
